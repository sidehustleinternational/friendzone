rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper function to check if user is admin using Firebase Custom Claims
    function isAdmin() {
      return request.auth != null && 
             request.auth.token.admin == true;
    }

    // Users collection
    match /users/{userId} {
      // Users can read their own data and search for other users (for friend requests)
      allow read: if request.auth != null;
      // Users can create their own document on signup
      allow create: if request.auth != null && request.auth.uid == userId;
      // Users can update their own data
      allow update: if request.auth != null && request.auth.uid == userId;
      // Admin can delete any user document, others cannot
      allow delete: if isAdmin();
    }

    // Homes/Zones collection
    match /homes/{homeId} {
      allow read: if request.auth != null;
      allow create: if request.auth != null && request.auth.uid == request.resource.data.createdBy;
      // Allow updates if:
      // 1. User is already a member (existing members can update)
      // 2. User is the zone creator (can add new members)
      // 3. User is adding themselves to members array (for accepting friend requests)
      allow update: if request.auth != null && (
        request.auth.uid in resource.data.members ||
        request.auth.uid == resource.data.createdBy ||
        (request.auth.uid in request.resource.data.members && 
         !(request.auth.uid in resource.data.members))
      );
      allow delete: if (request.auth != null && resource.data.createdBy == request.auth.uid) || isAdmin();
    }

    // Friend Requests collection
    match /friendRequests/{requestId} {
      allow read: if request.auth != null;
      allow create: if request.auth != null && request.auth.uid == request.resource.data.fromUserId;
      allow update: if request.auth != null &&
        (resource.data.fromUserId == request.auth.uid ||
         resource.data.toUserId == request.auth.uid);
      allow delete: if (request.auth != null &&
        (resource.data.fromUserId == request.auth.uid ||
         resource.data.toUserId == request.auth.uid)) || isAdmin();
    }

    // Friends collection (actual friendships)
    match /friends/{friendId} {
      allow read: if request.auth != null;
      // Allow creation if the authenticated user is either the userId or friendUserId
      allow create: if request.auth != null &&
        (request.resource.data.userId == request.auth.uid ||
         request.resource.data.friendUserId == request.auth.uid);
      allow update: if request.auth != null &&
        (resource.data.userId == request.auth.uid ||
         resource.data.friendUserId == request.auth.uid);
      allow delete: if (request.auth != null &&
        (resource.data.userId == request.auth.uid ||
         resource.data.friendUserId == request.auth.uid)) || isAdmin();
    }

    // Friendships collection (legacy - keeping for compatibility)
    match /friendships/{friendshipId} {
      allow read: if request.auth != null;
      allow create: if request.auth != null;
      allow update: if request.auth != null &&
        (resource.data.userId == request.auth.uid ||
         resource.data.friendUserId == request.auth.uid);
      allow delete: if (request.auth != null &&
        (resource.data.userId == request.auth.uid ||
         resource.data.friendUserId == request.auth.uid)) || isAdmin();
    }

    // Debug logs (for troubleshooting)
    match /debugLogs/{logId} {
      // TEMPORARY: Allow unauthenticated writes for debugging Apple Sign-In issues
      // In production, you should restrict this or disable it
      allow read: if request.auth != null;
      allow create: if true; // Allow unauthenticated writes for debugging
      allow delete: if isAdmin();
    }

    // Location logs (for geofencing debug)
    match /locationLogs/{logId} {
      allow read: if request.auth != null;
      allow create: if request.auth != null && request.auth.uid == request.resource.data.userId;
      allow delete: if isAdmin();
    }

    // Config collection (for remote settings)
    match /config/{configId} {
      allow read: if request.auth != null;
      allow write: if isAdmin();
    }

    // Deny all other access by default
    match /{document=**} {
      allow read, write: if false;
    }
  }
}